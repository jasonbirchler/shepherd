{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debug: Attach using PID",
      "type": "debugpy",
      "request": "attach",
      "processId": "${command:pickProcess}"
    },
    {
      "name": "Python Debug: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/Push2Controller",
      "python": "${workspaceFolder}/Push2Controller/venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/Push2Controller:${workspaceFolder}"
      }
    },
    {
      "name": "Debug: Shephard Push2Controller",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/Push2Controller/app.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/Push2Controller",
      "python": "${workspaceFolder}/venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/Push2Controller:${workspaceFolder}"
      },
      "args": ["-s"]
    },
    {
      "name": "Debug: Shephard backend",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/pyshepherd/pyshepherd.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/pyshepherd",
      "python": "${workspaceFolder}/venv/bin/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}"
      },
      "args": ["-s"]
    }
  ]
}
